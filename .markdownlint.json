{
  "line-length": {
    "line_length": 120,
    "code_blocks": false,
    "tables": false
  },
  "no-inline-html": {
    "allowed_elements": [
      "br",
      "img",
      "a",
      "strong",
      "em",
      "code",
      "sup",
      "sub"
    ]
  },
  "no-duplicate-header": false,
  "no-trailing-punctuation": {
    "punctuation": ".,;:!"
  }
}
