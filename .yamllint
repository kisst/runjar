extends: default

rules:
  line-length:
    max: 120
    level: error

  document-start:
    present: false

  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']
    check-keys: true

  brackets:
    max-spaces-inside: 1
    max-spaces-inside-empty: 0

  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  comments:
    min-spaces-from-content: 1

  empty-lines:
    max: 2
    max-start: 0
    max-end: 1
